Package: astrolabe
Title: Astrolabe: An Entropy-based Method for Causality on Quantitative Outcomes in R
Version: 0.0.0.9000
Authors@R: 
    c(
      person("Federica", "Grosso", email = "federicagrosso31@gmail.com,", role ="aut"),
      person("Fabio", "Chillotti", email = "astrolabe.dispense778@passinbox.com", role = c("aut","cre"))
